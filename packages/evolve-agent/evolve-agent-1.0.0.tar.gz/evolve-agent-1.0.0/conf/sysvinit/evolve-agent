#!/bin/sh
### BEGIN INIT INFO
# Provides:          evolve-agent
# Required-Start:    $network $local_fs $remote_fs
# Required-Stop:     $network $local_fs $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Evolve Agent.
# Description:       Start Evolve Agent daemon.
### END INIT INFO

NAME=evolve-agent
DAEMON=/usr/bin/evolve-agent
DAEMON_ARGS="-p /var/run/evolve-agent.pid"
PIDFILE=/var/run/evolve-agent.pid
CONF=/etc/evolve-agent/config.json

# Exit if the package is not installed
[ -x $DAEMON ] || exit 0

# Checking for a config file in place
if [  ! -e $CONF ]; then
   echo "$CONF not found."
   exit 2
fi

get_pid() {
  cat "$PIDFILE"
}

is_running() {
  [ -f "$PIDFILE" ] && ps $(get_pid) > /dev/null 2>&1
}

start() {
  if [ -f "$PIDFILE" ] && kill -0 $(get_pid); then
    echo "$NAME already running"
    return 1
  fi

  echo "Starting $NAME"
  $DAEMON -d $DAEMON_ARGS
  echo $! > $PIDFILE
}

stop() {
  if [ ! -f "$PIDFILE" ] || ! kill -0 $(get_pid); then
    echo "$NAME not running"
    return 1
  fi

  echo "Stopping $NAME"
  kill $(cat $PIDFILE) && rm -f "$PIDFILE"
}

restart() {
  stop
  start
}

status() {
  if is_running; then
    echo "Running"
  else
    echo "Stopped"
  fi
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  status)
    status
    ;;
  *)
    echo "Usage: $0 {start|stop|restart|status}"
    ;;
esac
