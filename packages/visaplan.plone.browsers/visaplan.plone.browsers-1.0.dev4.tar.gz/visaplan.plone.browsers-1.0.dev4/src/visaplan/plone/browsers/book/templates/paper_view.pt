<tal:block tal:define="dummy python:request.set('span_class','col-md-9');"/>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">


    <metal:no-ads fill-slot="column_two_slot"/>

    <metal:block fill-slot="head_slot">
        <metal:block metal:use-macro="here/book_view/macros/header"/>
    </metal:block>
    <metal:buttonlist fill-slot="buttonlist">
        <tal:block tal:condition="python:here.getBrowser('book').isBook()">
            <metal:buttons use-macro="here/export_button/macros/buttons"/>
        </tal:block>
    </metal:buttonlist>

<body>

<metal:block fill-slot="top_slot"
                tal:define="dummy python:here.getAdapter('checkperm')('Manage portal') or request.set('disable_border', 1)"/>

<metal:no-ads fill-slot="ad-block-above-content"/>
<metal:main fill-slot="main">
<metal:mac define-macro="main">
    <metal:block metal:use-macro="here/book_view/macros/main"/>
</metal:mac>
</metal:main>

</body>
</html>

