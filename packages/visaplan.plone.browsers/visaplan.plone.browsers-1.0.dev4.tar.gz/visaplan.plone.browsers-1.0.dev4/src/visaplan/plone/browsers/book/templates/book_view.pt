      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

    <metal:no-ads fill-slot="column_two_slot"/>

    <metal:block fill-slot="head_slot">

        <metal:block metal:define-macro="header">
        </metal:block>
        <!-- hier ist navi -->
