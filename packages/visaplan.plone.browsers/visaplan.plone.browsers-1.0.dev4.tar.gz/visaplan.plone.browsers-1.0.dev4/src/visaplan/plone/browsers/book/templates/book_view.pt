<body>

<metal:main fill-slot="main">

    <metal:block metal:define-macro="main"
                 tal:define="stage nocall:here/@@stage;
                             objects python:[brain.getObject() for brain in stage.getAsBrains('book-start-page', here.UID())]">

        <tal:block tal:condition="objects">
            <tal:block tal:repeat="here objects">
                <tal:block tal:define="templateId here/getDefaultLayout | nothing;
                                       template python:templateId and here.unrestrictedTraverse(templateId, None) or None"
                           tal:condition="template">
                    <tal:block tal:define="belowcontentbody python:False">
                        <metal:block metal:use-macro="template/macros/main">
../../../skins/unitracc_templates/folder_listing.pt
../../../skins/unitracc_templates/document_view.pt
			</metal:block>
                    </tal:block>
                </tal:block>
            </tal:block>
        </tal:block>

        <tal:block tal:condition="not:objects">
            <metal:block metal:use-macro="here/book_agenda_view/macros/main">
./book_agenda_view.pt
            </metal:block>
        </tal:block>

    </metal:block>


</metal:main>

