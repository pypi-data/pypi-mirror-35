<tal:block tal:define="list_ here/@@book/getBookImages;
                       getbrain python:here.getAdapter('getbrain');
                       batch python:here.getBrowser('batch')(list_,24)"
           tal:on-error="pair">

    <div class='area-content-navigation text-center'>
        <metal:block metal:use-macro="here/batch_macros/macros/navigation"/>
    </div>
    <tal:block tal:repeat="pair batch">
        <table class="gallery-item" cellspacing="0" cellpadding="0"
               tal:define="brain python:getbrain(pair[1])" border="1">
            <tr>
                <td class="one">
                    <div style="height:120px">
                    <a rel="lightbox[image]"
                       tal:attributes="href string:./resolveUid/${brain/UID}/@@scaling/get?scaling=720x720;
                                       title brain/Description"
                       tal:on-error="pair">
                        <img tal:attributes="src string:./resolveUid/${brain/UID}/@@scaling/get?scaling=120x120"/>
                    </a>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="two">
                    <div class="discreet">
                        <a href="#"
                           class="kss-ppt-page"
                           tal:define="url python:pair[0].UID"
                           tal:attributes="rel string:uid-${url}"
                           tal:content="python:pair[0].Title"/>
                    </div>
                </td>
            </tr>
        </table>
    </tal:block>

    <div class='area-content-navigation text-center'>
        <metal:block metal:use-macro="here/batch_macros/macros/navigation"/>
    </div>

</tal:block>