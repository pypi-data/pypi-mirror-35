<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

    <metal:no-ads fill-slot="column_two_slot"/>
    <metal:no-ads fill-slot="column_one_slot"/>

    <metal:block metal:fill-slot="head_slot">
        <link rel="stylesheet" type="text/css" href="/++resource++unitracccourse/unitracccourse_edit.css"/>

        <script type="text/javascript"
                src="/++resource++unitracccourse/unitracccourse_xml.js"></script>
        <script type="text/javascript"
                src="/++resource++unitracccourse/unitracccourse_edit.js"></script>
<tal:vim-gf replace="nothing"><!-- gf:
../resource/unitracccourse_edit.js
./js-coursemanagement-lesson-edit.pt
--></tal:vim-gf>
    </metal:block>

    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1)" />

<body>

<metal:main fill-slot="main">

    <div id="area-title">
        <h1 tal:content="here/translated_title_or_id"/>
    </div>
    <div class="area-content">
        <div class="row">

            <div class="col-md-12 btn-toolbar">
                <input class="button-object-actions coursemanagement-browse-button btn btn-default"
                       type="button"
                       value="Browse"
                       i18n:attributes="value"/>
                <input class="button-object-actions coursemanagement-reset-button btn btn-default"
                       type="button"
                       value="Reset"
                       i18n:attributes="value"/>
                <input class="button-object-actions coursemanagement-save-button btn btn-default"
                       type="button"
                       value="Save"
                       i18n:attributes="value"/>
                <input class="button-object-actions coursemanagement-create-lesson btn btn-default"
                       type="button"
                       value="Add lesson"
                       i18n:attributes="value"/>
                <input class="button-object-actions coursemanagement-load-button btn btn-default"
                       type="button"
                       value="Load course"
                       i18n:attributes="value"/>
            </div>

            <div class="coursemanagement-edit">
                <div class="col-md-6">
                    <div class="one">
                        <ul class="start-padding connectedSortable">
                            <li class="headline course-start"
                                i18n:translate="">Course start</li>
                            <li class="headline course-end"
                                i18n:translate="">Course end</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="two row ">
                        <div class="coursemanagement-item-edit" style="display:none;">
                            <!-- -->
                        </div>
                        <div class="coursemanagement-detail">
                            <!-- -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</metal:main>

</body>
</html>

