    perm_mg python:checkperm('Manage Groups');
    perm_mst python:checkperm('unitracc: Manage structure types');
    perm_sac python:checkperm('unitracc: Manage submitted and accepted content');
    perm_pst python:checkperm('unitracc: Publish structure types');
    perm_kw python:checkperm('unitracc: Manage Keywords');
    perm_stg python:mgmt.canAccessStage();
    perm_tan python:checkperm('unitracc: Manage TANs');
    has_booking here/@@unitraccfeature/has_booking;
    has_courses here/@@unitraccfeature/has_courses;
    perm_mc python:has_courses and checkperm('unitracc: Manage courses');
    perm_mo python:has_booking and checkperm('unitracc: Manage Orders');
